@page "/styled-nodes"
@inherits ComponentBase

<PageTitle>Styled Nodes Example</PageTitle>

<section class="section">
    <div class="container">
        <h1 class="title is-3">Styled Nodes</h1>
        <p class="subtitle is-6">Per-node styling with different colors and borders for each department using DataNodeOptions.</p>

        <div class="box" style="padding: 0;">
