@page "/basic"
@inherits ComponentBase

<PageTitle>Basic Tree Example</PageTitle>

<section class="section">
    <div class="container">
        <h1 class="title is-3">Basic Tree</h1>
        <p class="subtitle is-6">A simple string-based organizational chart using default settings.</p>

        <div class="box" style="padding: 0;">
            @if (ParentNode != null)
            {
                <ApexTree TItem="string" Parent="ParentNode" Options="Options" />
            }
        </div>
    </div>
</section>
